.image_img {
  width: 100%;
}

.con{
    display: flex;
    height: 40%;
    position: relative;
    margin-top: 2%;
}

.time{
  width: 35%;
  text-align: center;
  color: #333;
}

.day{
  font-size: 50px;
}
.my{
  font-size: 14px;
}
.lan{
  width: 65%;
  color: #333;
  position: relative;
}
.h{
  position: absolute;
  left: 0;
  top: 0;
}
.b{
  position: absolute;
  right: 0;
  bottom: 0;
}
.p{
  width: 80%;
  position: absolute;
  font-size: 20px;
  color: #666;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-60%);
}
.a{
  width: 80%;
  text-align: right;
  position: absolute;
  bottom: 5%;
  right: 15%;
  color: #666;
}